<resources>
    <declare-styleable name="AnalogGauge">
        <attr name="arcSweep" format="float" />
    </declare-styleable>
    <declare-styleable name="BaseGauge">
        <attr name="showLabel" format="boolean" />
        <attr name="labelTextSize" format="integer" />
        <attr name="labelPosFromBottom" format="dimension" />
        <attr name="unit" format="string" />
        <attr name="maxValue" format="integer" />
        <attr name="value" format="integer" />
        <attr name="numTicks" format="integer" />
        <attr name="tickLength" format="integer" />
        <attr name="ticksAtBackgroundColorChange" format="boolean" />
        <attr name="valueStrokeCaps" format="enum">
            <enum name="square" value="0"/>
            <enum name="round" value="1"/>
            <enum name="butt" value="2"/>
        </attr>
        <attr name="valueColor" format="color" />
    </declare-styleable>
</resources>